---
import Layout from '../layouts/Layout.astro';
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getCollection } from 'astro:content';
import {Content, getHeadings} from '../content/bibliografia/intro.md';

const headings = getHeadings();

// Get all markdown files from the bibliografia collection
const practices = await getCollection('bibliografia');

// Create the sidebar items
const sidebar = practices.map(practice => ({
    label: practice.data.title,  // Uses the title from frontmatter
    link: `/bibliografia/${practice.slug}` // Creates the link using the file slug
}));

